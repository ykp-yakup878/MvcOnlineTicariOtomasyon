@model MvcOnlineTicariOtomasyon.Models.siniflar.Class2
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    $(function () {
        $('#DrpKategori').change(function () {
            var id = $('#DrpKategori').val();
            $.ajax({
                url: '/Kategori/UrnGetir',
                data: { p: id },
                type: "POST",
                dataType: "Json",
                success: function (data) {
                    console.log(data);
                    $('#DrpUrn').empty();
                    for (var i = 0; i < data.length; i++) {
                        $('#DrpUrn').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");
                    }
                }
            });
        });
    });
</script>

<br />
<div>
    <h2>Kategoriler ve Ürünler</h2>
</div>
<br />
<div>
    @Html.Label("Kategoriler")
    @Html.DropDownList("DrpKategori",Model.Kategoriler,"---Kategori Seçiniz---",new {@class="form-control" })
    <br />
    @Html.Label("Ürünler")
    <select id="DrpUrn" class="form-control">

    </select>
</div>

