@model MvcOnlineTicariOtomasyon.Models.siniflar.Cariler
@using (Html.BeginForm("CariBilgiGuncelle", "CariPanel", FormMethod.Post))
{
    <form class="form-horizontal">
        @Html.HiddenFor(x => x.CariID)
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Ad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName" class="col-sm-2 col-form-label">Soyad</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputEmail" class="col-sm-2 col-form-label">Mail</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            <label for="inputName2" class="col-sm-2 col-form-label">Şehir</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <label for="inputSkills" class="col-sm-2 col-form-label">Şifre</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-sm-2 col-sm-10">
                <button type="submit" class="btn btn-danger">Kaydet</button>
            </div>
        </div>
    </form>
}