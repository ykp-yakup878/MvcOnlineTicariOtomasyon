@model MvcOnlineTicariOtomasyon.Models.siniflar.Mesajlar
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<!-- Font Awesome -->

<link rel="stylesheet" href="~/css/plugins/fontawesome-free/css/all.min.css">

<!-- Ionicons -->

<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<!-- Theme style -->

<link rel="stylesheet" href="~/css/dist/css/adminlte.min.css">

<!-- summernote -->

<link rel="stylesheet" href="~/css/plugins/summernote/summernote-bs4.css">

<!-- Google Font: Source Sans Pro -->

<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">


<body class="hold-transition sidebar-mini">





    <!-- Content Header (Page header) -->

    <section class="content-header">

        <div class="container-fluid">

            <div class="row mb-2">

                <div class="col-sm-6">

                    <h1>Yeni Mesaj Oluştur</h1>

                </div>



            </div>

        </div><!-- /.container-fluid -->

    </section>

    <!-- Main content -->

    <section class="content">

        <div class="container-fluid">

            <div class="row">

                <div class="col-md-3">
                    <a href="/CariPanel/YeniMesaj" class="btn btn-primary btn-block mb-3">Yeni Mesaj</a>
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Klasörler</h3>
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body p-0">
                            <ul class="nav nav-pills flex-column">
                                <li class="nav-item active">
                                    <a href="/CariPanel/GelenMesajlar" class="nav-link">
                                        <i class="fas fa-inbox"></i> Gelen Kutusu
                                        <span class="badge bg-primary float-right">@ViewBag.d1</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="/CariPanel/GidenMesajlar" class="nav-link">
                                        <i class="far fa-envelope"></i> Gönderilen
                                        <span class="badge bg-info float-right">@ViewBag.d2</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>

                <!-- /.col -->

                <div class="col-md-9">
                    <div class="card card-primary card-outline">
                        <div class="card-header">
                            <h3 class="card-title">Yeni Mesaj</h3>
                        </div>
                        <!-- /.card-header -->
                        <form class="form-group" method="post">
                            <div class="card-body">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Kime:" name="Alici">
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Konu:" name="Konu">
                                </div>
                                <div class="form-group">
                                    <textarea id="compose-textarea" class="form-control" name="Icerık" placeholder="Mesajınız" style="height: 300px"></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary"><i class="far fa-envelope"></i>Gönder</button>

                                @*<div class="form-group">
                                        <div class="btn btn-default btn-file">
                                            <i class="fas fa-paperclip"></i> Dosya Seç
                                            <input type="file" name="attachment">
                                        </div>
                                    </div>*@
                            </div>
                        </form>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <div class="float-right">
                                <button type="button" class="btn btn-default"><i class="fas fa-pencil-alt"></i>Taslak</button>

                            </div>
                            <button type="reset" class="btn btn-default"><i class="fas fa-times"></i> Vazgeç</button>
                        </div>
                        <!-- /.card-footer -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <script src="~/css/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/css/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/css/dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/css/dist/js/demo.js"></script>
    <!-- Summernote -->
    <script src="~/css/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- Page Script -->
    <script>
        $(function () {
            //Add text editor
            $('#compose-textarea').summernote()
        })</script>
</body>