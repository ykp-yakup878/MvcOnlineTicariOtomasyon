@using MvcOnlineTicariOtomasyon.Models.siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}
<br />
<h2>Sipariş Geçmişim</h2>
<table class="table table-bordered">
    <tr>
        <th>Ürün Adı</th>
        <th>Tarih</th>
        <th>Fiyat</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Urun.UrunAd</td>
            <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>
            <td>@x.Fiyat</td>
        </tr>
    }
</table>
