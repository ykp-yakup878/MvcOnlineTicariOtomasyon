@using MvcOnlineTicariOtomasyon.Models.siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br>
<h2>Fatura Kalemler</h2>
<br />
@*<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Fatura Seri No: @ViewBag.f</li>
</ol>*@
<table class="table table-hover">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.FaturaKalemID</td>
            <td>@x.Aciklama</td>
            <td>@x.Miktar</td>
            <td>@x.BirimFiyat</td>
            <td>@x.Tutar</td>
        </tr>
    }
</table>
<a href="/Fatura/YeniKalem" class="btn btn-primary">Yeni Kalem Girişi</a>