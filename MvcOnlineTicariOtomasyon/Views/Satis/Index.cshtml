@using MvcOnlineTicariOtomasyon.Models.siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .navbar{
        margin-bottom:0 !important;
        border-radius:0 !important;
    }
    .input-group{
        display:flex !important;
    }
</style>
<br />
<table id="tbl1" class="table table-bordered mt-3" style="">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>İşlem</th>
        </tr>
    </thead>
    @foreach (var k in Model)
    {
        <tr>
            <td>
                @k.SatisID
            </td>
            <td>
                @k.Urun.UrunAd
            </td>
            <td>
                @k.Cariler.CariAd @k.Cariler.CariSoyad
            </td>
            <td>
                @k.Personel.PersoneAd @k.Personel.PersoneSoyad
            </td>
            <td>
                @k.Adet
            </td>
            <td>
                @k.Fiyat
            </td>
            <td>
                @k.ToplamTutar
            </td>
            <td>
                @k.Tarih
            </td>
            <td>
                <a href="/Satis/SatisGetir/@k.SatisID" class="btn btn-success">Güncelle</a>
                <a href="/Satis/SatisDetay/@k.SatisID" class="btn btn-info">Detay</a>
            </td>
        </tr>
    }
</table>
<a href="/Satis/YeniSatis" class="btn btn-primary">Yeni Satış Yap</a>

<link href="~/Content/bootstrap.css" rel="stylesheet" />


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>