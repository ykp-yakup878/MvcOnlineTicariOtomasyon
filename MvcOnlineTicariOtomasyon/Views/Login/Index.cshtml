

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/stil.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/prefixfree/1.0.7/prefixfree.min.js"></script>

</head>
<body id="particles-js">
    <!-- partial:index.partial.html -->
    <div id="modal-container" class="admin">
        <div class="modal-background">
            <div class="modal">
                @using (Html.BeginForm("AdminLogin", "Login", FormMethod.Post, new { @class = "box" }))
                {
                    <i id="btn" class="fas fa-times" style="color: white; position: absolute; top: 15px; right: 15px; font-size: 1.5rem; cursor: pointer;" onclick="close()"></i>
                    <h1>Admin</h1>
                    <input type="text" name="KullaniciAd" placeholder="Username">
                    <input type="password" name="Sifre" placeholder="Password">
                    <input id="btn" type="submit" value="Login">
                }
            </div>
        </div>
    </div>
    <div id="modal-container" class="carikayit2">
        <div class="modal-background">
            @Html.Action("Partial1", "Login")
        </div>
    </div>
    <div id="modal-container" class="carigiris1">
        <div class="modal-background">
            <div class="modal">
                @using (Html.BeginForm("CariLogin1", "Login", FormMethod.Post, new { @class = "box" }))
                {
                    <i id="btn1" class="fas fa-times" style="color: white; position: absolute; top: 15px; right: 15px; font-size: 1.5rem; cursor: pointer;" onclick="close()"></i>
                    <h1>Cari Giriş</h1>
                    <input type="email" name="CariMail" placeholder="Mail" required>
                    <input type="password" name="Sifre" placeholder="Password" required>
                    <input type="submit" name="" value="Sign Up">
                }
            </div>
        </div>
    </div>
    <h1 class="baslik">Online Ticari Otomasyon</h1>
    <div class="buttons">
        <h2 style="font-size: 1.5rem;">Giriş Yöntemi Seç</h2>
        <div id="five" class="carikayit">Cari Kayıt</div>
        <div id="two" class="carigiris">Cari Giriş</div>
        <div id="one" class="button">Admin & Personel</div>
        <div class="or">
            <div class="title">
                <div><hr></div>
                <h3>Social Media</h3>
                <div><hr></div>

            </div>
            <div class="media">
                <a href="#"><i class="fab fa-instagram"></i></a>
                <a href="#"><i class="fab fa-youtube"></i></a>
                <a href="#"><i class="fab fa-facebook"></i></a>
            </div>
        </div>
    </div>
    <footer>Copyright 2021 <strong>Ticari Otomasyon</strong></footer>
    <!-- partial -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="~/js/script.js"></script>
    <script>
        particlesJS.load('particles-js', '"~/js/particles.json', function () {
            console.log('particles.json yüklendi...');
        });
    </script>
</body>
</html>



